<h1>Orders</h1>

<% @orders.reverse_order.each do |order| %>
    <% order_status(order.id) %>
    <% if order.user_id.present? %>
        <% user = User.find order.user_id %>
    <% end %>
    <hr>
    <div class='order-index-line row'>
        <div class="col-sm-2">Invoice: <%= order.invoice_number %></div>
        <div class="col-sm-2">Date: <%= order.purchase_date %></div>
        <div class="col-sm-2">User: <%= user.name %></div>
        <div class="col-sm-2">Price: <%= number_to_currency(order.total_revenue) %></div>
        <div class="col-sm-3">Order Status: <%= order.order_status %></div>
        <div class="col-sm-1"><%= link_to(button_tag("View"), order_path(order.id)) %></div>
    </div>
<% end %>
