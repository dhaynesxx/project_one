<%= form_for @product do |f| %>

<fieldset>
  <%= f.label :name %>
  <%= f.text_field :name %>
</fieldset>
<fieldset>
  <%= f.label :desciption %>
  <%= f.text_field :description %>
</fieldset>
<fieldset>
  <%= f.label :image %>
  <%= f.url_field :image %>
</fieldset>
<fieldset>
  <%= f.label :tax_applies %>
  <%= f.check_box :tax_applies %>
</fieldset>
<fieldset>
  <%= f.label :price_regular %>
  <%= f.text_field :price_regular %>
</fieldset>
<fieldset>
  <%= f.label :price_sale %>
  <%= f.text_field :price_sale %>
</fieldset>
<fieldset>
  <%= f.label :on_sale %>
  <%= f.check_box :on_sale %>
</fieldset>
<fieldset>
  <%= f.hidden_field :business_id, :value => Business.first.id %>
  <%= f.submit %>
</fieldset>

<% end %>
