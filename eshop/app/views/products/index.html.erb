<h1>All Products</h1>

<% @products.each do |product| %>
    <div class='product-index-container'>
        <%= link_to(image_tag(product.image, :class => "thumb"), product) %>
        <br>
        <p><%= link_to product.name, product %></p>
        <br>
        <% unless product.on_sale? %>
            <p><%= number_to_currency(product.price_regular) %></p>
            <br>
        <% end %>
        <% if product.on_sale? %>
            <p class='product-sale'><%= number_to_currency(product.price_regular) %></p>
            <p><%= number_to_currency(product.price_sale) %></p>
        <% end %>
        <% if @current_user.present? && product.inventory > 0 %>
            <p><%= link_to (button_tag "Add to Cart"), cart_add_path(:id => product.id, :page => 'index') %></p>
        <% end %>
        <% if product.inventory == 0 %>
            <p><%= button_tag "Out of Stock" %></p>
        <% end %>
    </div>
<% end %>
